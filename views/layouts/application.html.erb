<!DOCTYPE html>
<html>
<head>
  <title>Theatre</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% if flash[:notice] %>
      <%= flash[:notice] %>

    <% end %>
	<% if current_user %>
	Hello <%= current_user.name %> | <%=link_to "Check Profile", current_user %>| <%= link_to "Log out", session_path("current"), method: :delete %>
	<% else %>
	<%= link_to "Sign up", new_user_path %> ! <%= link_to "Log in", new_session_path %>
	<% end %>

<%= yield %>

</body>
</html>
